sed -i 's/( [^89aef][0-9a-f]/( */;s/( f[^01cde]/( */;s/( a/( d/;s/( f0/( a1/' enc-t2.tex
tex 01cm-lh
cp wrk/lh-lcy/lhcodes.mf /path/to/mf/MFinputs/lh/
echo 'boolean altcoding,kapitel,concrete; altcoding:=true; kapitel:=false; concrete:=false;' | cat ../../../../fonts/source/lh/base/lkligtbl.mf - wrk/lh-lcy/lhliker.mf >/path/to/mf/MFinputs/lh/lhliker.mf
sed '0,/^%%\+$/d;/LHver_check/d;/endinput/,$d' lgrusu.mf | sed '/./,$!d' | tac | sed '/./,$!d' | tac >/path/to/mf/MFinputs/lh/lgrusu.mf
sed '0,/^%%\+$/d;/LHver_check/d;/endinput/,$d' lgrusi.mf | sed '/./,$!d' | tac | sed '/./,$!d' | tac | cat -s | sed s/cyrchar/beginchar/ >/path/to/mf/MFinputs/lh/lgrusi.mf
sed -i -n '/Cyrillic symbol No/,/endchar/p;/French Opening Quotes/,/endchar/{s/lhchar/\n&/;p};/French closing quotes/,/endchar/{s/lhchar/\n&/;p}' lgcyrsym.mf
